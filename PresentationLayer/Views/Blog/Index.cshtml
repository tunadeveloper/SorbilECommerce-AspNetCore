@model List<EntityLayer.Concrete.Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_VisitorLayout.cshtml";
}

<!-- Title page -->
<section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url('/cozastore-master/images/bg-02.jpg');">
	<h2 class="ltext-105 cl0 txt-center">
		Blog
	</h2>
</section>


<!-- Content page -->
<section class="bg0 p-t-62 p-b-60">
	<div class="container">
		<div class="row">
			<div class="col-md-8 col-lg-12 p-b-80">
				<div class="p-r-45 p-r-0-lg">
					@foreach(var item in Model){
	<!-- item blog -->
					<div class="p-b-63">
						<a href="blog-detail.html" class="hov-img0 how-pos5-parent">
								<img src="@item.ImageUrl" alt="IMG-BLOG">
						</a>

						<div class="p-t-32">
							<h4 class="p-b-15">
								<a href="blog-detail.html" class="ltext-108 cl2 hov-cl1 trans-04">
									@item.Title
								</a>
							</h4>

							<p class="stext-117 cl6">
								@(item.Description.Length > 200 ? item.Description.Substring(0,200) + "..." : item.Description)
							</p>

							<div class="flex-w flex-sb-m p-t-18">

									<a href="/Blog/BlogDetails/@item.Id" class="stext-101 cl2 hov-cl1 trans-04 m-tb-10">
									Devamını Gör
									<i class="fa fa-long-arrow-right m-l-9"></i>
								</a>
							</div>
						</div>
					</div>
					}
				

				</div>
			</div>

		</div>
	</div>
</section>



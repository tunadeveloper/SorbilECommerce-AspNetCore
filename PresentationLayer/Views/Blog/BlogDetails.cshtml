@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/_VisitorLayout.cshtml";
}

<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="index.html" class="stext-109 cl8 hov-cl1 trans-04">
            Anasayfa
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <a href="blog.html" class="stext-109 cl8 hov-cl1 trans-04">
            Blog
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
           @Model.Title
        </span>
    </div>
</div>


<!-- Content page -->
<section class="bg0 p-t-52 p-b-20">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-12 p-b-80">
                <div class="p-r-45 p-r-0-lg">
                    <!--  -->
                    <div class="wrap-pic-w how-pos5-parent" style="max-width: 400px; max-height: 300px; overflow: hidden;">
                        <img src="@Model.ImageUrl" alt="IMG-BLOG" style="width: 100%; height: auto; object-fit: cover;">
                    </div>


                    <div class="p-t-32">
                    

                        <h4 class="ltext-109 cl2 p-b-28">
                            @Model.Title
                        </h4>

                        <p class="stext-117 cl6 p-b-26">
                         @Model.Description
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


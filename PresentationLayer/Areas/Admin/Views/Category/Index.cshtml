@model List<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_adminLayout.cshtml";
}

<div class="container-fluid">
    <h5 class="card-title fw-semibold mb-4">Kategoriler</h5>
    <div class="row">
        <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">

                    <div class="table-responsive">
                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                                <tr>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Id</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Kategori Adı</h6>
                                    </th>
                                    <th>
                                        <h6 class="fw-semibold mb-0">Sil</h6>
                                    </th>
                                    <th>
                                        <h6 class="fw-semibold mb-0">Güncelle</h6>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="border-bottom-0"><h6 class="fw-semibold mb-0">@item.CategoryId</h6></td>
                                        <td class="border-bottom-0">
                                            <h6 class="fw-semibold mb-1">@item.Title</h6>
                                        </td>
                                        <td class="border-bottom-0">
                                            <a href="/Admin/Category/DeleteCategory/@item.CategoryId" class="btn btn-outline-danger">Kategoriyi Sil</a>
                                        </td>
                                        <td class="border-bottom-0">
                                            <a href="/Admin/Category/UpdateCategory/@item.CategoryId" class="btn btn-outline-success">Kategoriyi Güncelle</a>
                                        </td>

                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/Admin/Category/CreateCategory/" class="btn btn-info">Kategori Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "CreateBlog";
    Layout = "~/Areas/Admin/Views/_adminLayout.cshtml";
}
<div class="container-fluid">
    <h5 class="card-title fw-semibold mb-4">Blog Oluşturma Sayfası</h5>
    <div class="row">
        <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">
                    <form asp-action="CreateBlog" asp-area="Admin" asp-controller="Blog" method="post">
                        <label class="form-label">Başlık</label>
                        <input type="text" name="Title" class="form-control">
                        <br />
                        <label class="form-label">İçerik</label>
                        <textarea name="Description" class="form-control" rows="10"></textarea>
                        <br />
                        <label class="form-label">Görsel Url</label>
                        <input type="text" name="ImageUrl" class="form-control">
                        <br />
                        <button class="btn btn-info">Bloğu Ekle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


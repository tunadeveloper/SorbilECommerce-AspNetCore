@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_adminLayout.cshtml";
}
<div class="container-fluid">
    <h5 class="card-title fw-semibold mb-4">İletişim Bilgileri Güncelleme Sayfası</h5>
    <div class="row">
        <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">
                    <form asp-action="Index" asp-area="Admin" asp-controller="Contact" method="post">
                        <input type="hidden" name="Id" value="@Model.Id" />
                        <label class="form-label">E-Posta Adresi</label>
                        <input type="text" name="Email" class="form-control" value="@Model.Email">
                        <br />
                        <label class="form-label">Telefon Numarası</label>
                        <input type="text" name="Phone" class="form-control" value="@Model.Phone">
                        <br />
                        <label class="form-label">Harita URL</label>
                        <input type="text" name="MapUrl" class="form-control" value="@Model.MapUrl">
                        <br />
                        <label class="form-label">Adres</label>
                        <input type="text" name="Address" class="form-control" value="@Model.Address">
                        <br />
                        <button class="btn btn-info">Bilgileri Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


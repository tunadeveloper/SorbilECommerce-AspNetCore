@model List<EntityLayer.Concrete.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/_adminLayout.cshtml";
}

<div class="container-fluid">
    <h5 class="card-title fw-semibold mb-4">Ürünler</h5>
    <div class="row">
        <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4">
                    
                    <div class="table-responsive">
                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                                <tr>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Id</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Başlık</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Fiyatı</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Kategorisi</h6>
                                    </th>
                                   
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Görsel</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Popülerlik</h6>
                                    </th>
                                     <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Sil</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Güncelle</h6>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model){
 <tr>
                                    <td class="border-bottom-0"><h6 class="fw-semibold mb-0">@item.Id</h6></td>
                                    <td class="border-bottom-0">
                                        <h6 class="fw-semibold mb-1">@item.Title</h6>
                                        <span class="fw-normal">@item.Description</span>
                                    </td>
                                        <td class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0 fs-4">@item.Price₺</h6>
                                        </td>
                                        <td class="border-bottom-0">
                                            <p class="mb-0 fw-normal">@item.Category.Title</p>
                                        </td>
                                        <td class="border-bottom-0">
                                           <img src="@item.ImageUrl" class="img-thumbnail" style="width:60px" height="auto"/>
                                        </td>
                                       @if(item.IsPopular){
                                            <td class="border-bottom-0"><a href="/Admin/Product/RemovePopular/@item.Id" class="btn btn-warning">Popüleriği Kaldır</a></td>
                                       }else{
                                            <td class="border-bottom-0"><a href="/Admin/Product/MakePopular/@item.Id" class="btn btn-success">Popüler Yap</a></td>
                                       }
                                        <td class="border-bottom-0">
                                            <a href="/Admin/Product/DeleteProduct/@item.Id" class="btn btn-outline-danger">Ürünü Sil</a>
                                        </td>
                                        <td class="border-bottom-0">
                                            <a href="/Admin/Product/UpdateProduct/@item.Id" class="btn btn-outline-success">Ürünü Güncelle</a>
                                        </td>
                                </tr>
                                }
                               
                            </tbody>
                        </table>
                        <a href="/Admin/Product/CreateProduct/" class="btn btn-info">Ürün Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="py-6 px-6 text-center">
        <p class="mb-0 fs-4">Design and Developed by <a href="https://adminmart.com/" target="_blank" class="pe-1 text-primary text-decoration-underline">AdminMart.com</a> Distributed by <a href="https://themewagon.com">ThemeWagon</a></p>
    </div>
</div>

